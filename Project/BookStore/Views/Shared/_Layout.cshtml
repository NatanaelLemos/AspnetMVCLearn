<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BookStore</title>
    
    @Styles.Render("~/css/site")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BookStore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@(Url.Action("Index", "Cliente"))">Clientes</a></li>
                    <li><a href="@(Url.Action("Index", "Categoria"))">Categorias</a></li>
                    <li><a href="@(Url.Action("Index", "Livro"))">Livros</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@(Url.Action("Contact", "Home"))">Contato</a></li>
                    @(Html.Partial("_Login"))
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/js/site")
    @RenderSection("scripts", required: false)
</body>
</html>